" options
set guifont=Hack\ Nerd\ Font:h17
set guioptions=
set lines=999
set columns=9999
let s:transparency = 15
let &transparency = 0

" mapping
command GVIMTransparencyToggle let &transparency = s:transparency - &transparency
nnoremap <silent> <D-u> :<C-u>GVIMTransparencyToggle<CR>

syntax enable
